<Window x:Class="Estilos_de_Antonio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Estilos_de_Antonio"
        mc:Ignorable="d"
        Title="Estilos de Antonio" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="AparienciaBotonesBarraNavegacion" TargetType="Button">
            <Setter Property="Background" Value="DarkBlue"></Setter>
            <Setter Property="Height" Value="80"></Setter>
            <Setter Property="Width" Value="60"></Setter>
            <Setter Property="Margin" Value="20"></Setter>
            <Setter Property="VerticalAlignment" Value="Top"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Button Style="{StaticResource AparienciaBotonesBarraNavegacion}" x:Name="btnEjemplo1" Content="Ejemplo"></Button>
    </Grid>
</Window>
